<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_base"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="fragments.ui.main.HomeBaseFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_see_leagues"
            android:layout_width="match_parent"
            android:layout_height="110px"
            android:layout_marginLeft="150px"
            android:layout_marginRight="150px"
            android:layout_marginTop="300px"
            android:text="Stats par Championnats"/>

        <Button
            android:id="@+id/btn_see_clubs"
            android:layout_width="match_parent"
            android:layout_height="110px"
            android:layout_marginLeft="150px"
            android:layout_marginRight="150px"
            android:layout_marginTop="50px"
            android:layout_below="@id/btn_see_leagues"
            android:text="Stats par Clubs"/>

        <Button
            android:id="@+id/btn_see_player"
            android:layout_width="match_parent"
            android:layout_height="110px"
            android:layout_marginLeft="150px"
            android:layout_marginRight="150px"
            android:layout_marginTop="50px"
            android:layout_below="@id/btn_see_clubs"
            android:text="Stats par Joueurs"/>

        <FrameLayout
            android:id="@+id/frame_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_see_clubs"
            android:layout_marginTop="150px"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">
        </FrameLayout>
    </LinearLayout>
</ScrollView>